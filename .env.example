# Automaton Auditor Environment Configuration
# Copy this file to .env and fill in your values

# GitHub/GitLab Personal Access Token (for private repos)
# Generate at: https://github.com/settings/tokens or https://gitlab.com/-/profile/personal_access_tokens
GIT_TOKEN=

# Repository URL to audit (optional - can be passed via API)
REPO_URL=

# Path to documentation file (optional - can be passed via API)
DOC_PATH=

# Graph path for local analysis (optional)
GRAPH_PATH=

# Maximum clone depth (default: 50)
GIT_CLONE_DEPTH=50

# Clone timeout in seconds (default: 300)
GIT_CLONE_TIMEOUT=300

# Enable debug logging (default: false)
DEBUG=false
